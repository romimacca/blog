<% if @post.errors.any? %> 
    <div id="error_explanation" class="alert alert-danger" role="alert">
        <h4 class="alert-heading">No se pudo agregar el post</h4>
        <p>Encontramos <%= pluralize(@post.errors.count, "Problema") %></p>
        <hr>
        <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
    
<% else %>
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Post subido con Ã©xito!</h4>
        <hr>
        <p class="mb-0">Puedes encontrar la lista de todos tus post desde el inicio. 
            <a href="/" class="alert-link"> Ver lista completa de post </a>
        
        </p>
    </div>
<% end %>